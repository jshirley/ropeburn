{
  "manifest_version": 2,

  "name": "Ropeburn",
  "description": "Monitor Pull Requests on specific GitHub repositories.",
  "version": "1.0",

  "permissions": [
    "https://github.com/*",
    "https://avatars.githubusercontent.com/*",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon"  : "icons/icon.png",
    "default_popup" : "ropeburn.html"
  },
  "web_accessible_resources": [
    "fonts/*"
  ]
}
